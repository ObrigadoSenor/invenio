{
  "private": true,
  "version": "0.0.1",
  "description": "Component Library",
  "author": "Johan Sj√∂berg",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "unsafe-perm": true
  },
  "scripts": {
    "build:packages": "lerna run build",
    "clean:packages": "lerna run clean",
    "prod:build:packages": "yarn clean:packages && yarn build:packages && yarn clean:packages",
    "pre:build:check": "yarn prettier && yarn lint && yarn test:packages",
    "publish:all": "yarn pre:build:check && yarn prod:build:packages && lerna publish --exact",
    "lint": "lerna run lint --stream",
    "check:prettier": "prettier -l 'packages/**/src/**/*.{ts,tsx,mdx}' --ignore-path .gitignore",
    "prettier": "prettier --write 'packages/**/src/**/*.{ts,tsx,mdx}' --ignore-path .gitignore",
    "test:packages": "lerna run test --stream",
    "build:docker": "docker build . -f Dockerfile -t docker-storybook",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^3.4.2",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.14",
    "@types/ramda": "^0.27.32",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.9",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.2.3",
    "cross-env": "7.0.3",
    "eslint": "^7.10.0",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "ramda": "^0.27.1",
    "react": "^16.8.4",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-dom": "^16.8.4",
    "react-test-renderer": "^17.0.1",
    "rollup": "^2.27.1",
    "rollup-plugin-analyzer": "^3.3.0",
    "rollup-plugin-dts": "^1.4.13",
    "rollup-plugin-filesize": "^9.0.2",
    "rollup-plugin-peer-deps-external": "^2.2.3",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "terser": "^5.3.8",
    "typescript": "^4.0.2"
  },
  "dependencies": {}
}
