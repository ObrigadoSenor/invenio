{
  "name": "@invenio/core",
  "version": "0.0.1",
  "description": "Invenio - Core",
  "author": "Johan SjÃ¶berg",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "config": {
    "unsafe-perm": true
  },
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c -w",
    "clean": "rm -rf dist",
    "test": "jest",
    "test-watch": "jest --watch",
    "prepare": "yarn run build",
    "postpublish": "yarn clean",
    "lint": "eslint --ignore-path ../../.gitignore --fix"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.5",
    "jest": "^26.4.2",
    "rollup": "^2.33.1",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "react": ">=16.8.6",
    "react-dom": ">=16.8.6",
    "@invenio/theme": "0.0.1"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "setupFilesAfterEnv": [
      "./setupTests.ts"
    ]
  }
}
